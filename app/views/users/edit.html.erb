<div class = "container">
  <div class = "row">
    <div class = "col-sm-12 col-md-8 col-lg-5">
      <h4>User info</h4>
      
      <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
       <div class = "left_padding">Name</div>
          <%= f.text_field :name %>
       <div class = "left_padding">Image</div>
 <%= f.file_field :profile_image, placeholder: "プロフィール画像", accept: "image/*" %>  
        <div class = "left_padding">Introduction</div>
          <%= f.text_area :introduction %>
       <div><%= f.submit 'Update User', class: "btn btn-secondary"%></div>
      <% end %>
    </div>
  </div>
</div>