<div>
  <h4>User info</h4>
  
  <%= form_with model: @user, url:user_path(@user.id), method: :patch do |f| %>
   <div class = "left_padding">Name</div>
      <%= f.text_field :name %>
    <div class = "left_padding">Opinion</div>
      <%= f.text_area :introduction %>
   <div><%= f.submit 'Update User', class: "btn btn-secondary"%></div>
  <% end %>
</div>