<div>
  <h1 class = "sidebar_title">Users info</h1>
  
  <table>
    <tr>
      <th style="text-align:center">name</th>
    </tr>
    <tr>
      <td style="text-align:center"><%= user.name %></td>
    </tr>
    
    <tr>
      <th style="text-align:center">introduction</th>
    </tr>
    <tr>
      <td style="text-align:center"><%= user.introduction %></td>
    </tr>
  </table>
  
  <div class = "user_edit_box"><%= link_to edit_user_path(params[:id]) do %>
    <div class = "center_margin"><i class="fas fa-user-cog"></i></div>
  <% end %>
  </div>
  
  <div>
    <h1 class = "sidebar_title top_space">New book</h1>
   <%= form_with model: @Book do |f| %>
   <div class = "left_padding">Title</div>
      <%= f.text_field :title %>
    <div class = "left_padding">Opinion</div>
      <%= f.text_area :body %>
   <div><%= f.submit 'Create Book', class: "btn btn-secondary"%></div>
  <% end %>
  </div>
  
</div>