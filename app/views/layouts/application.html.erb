<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/0ea4f70a08.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    
    <header>
      <h1>Bookers</h1>
      <% if user_signed_in? %>
      <li>
        <%= link_to "Home", user_path(current_user.id) %>
      </li>
      <li>
        <%= link_to "Users", users %>
      </li>
      <li>
        <%= link_to "Books", books %>
      </li>
      <li>
        <%= link_to "Log out", '/' %>
      </li>
      <% else %>
      <li>
        <%= link_to "Home", '/' %>
      </li>
      <li>
        <%= link_to "About", '/homes/about' %>
      </li>
      <li>
        <%= link_to "Sign up",new_user_registration_path %>
      </li>
      <li>
        <%= link_to "Log in", new_user_session_path %>
      </li>
      <% end %>
    </header>
    
    <footer>
      <p class="footer-text">Â© CopyRight Infratop.inc</p>    
    </footer>
    <%= yield %>
  </body>
</html>
